<Window x:Class="webSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:webSimulator"
        mc:Ignorable="d"
        Title="WebSimulator" Height="158.667" Width="282.334">
    <Grid>
        <Canvas Background="LightGray">
            <TextBox Name="txtURL" Width="160" Canvas.Left="84" Canvas.Top="20" Background="White">https://google.com/</TextBox>
            <TextBox Name="txtW" Width="40" Canvas.Left="118" Canvas.Top="46" Background="White">800</TextBox>
            <TextBox Name="txtH" Width="40" Canvas.Left="204" Canvas.Top="46" Background="White">600</TextBox>
            <Label Content="URL" Canvas.Top="13" Canvas.Left="17"></Label>
            <Label Content="Web Size" Canvas.Top="39" Canvas.Left="17"></Label>
            <Label Content="width" Canvas.Top="39" Canvas.Left="78"></Label>
            <Label Content="height" Canvas.Top="39" Canvas.Left="160"></Label>
            <Button Content="Start Web-Simulator" Canvas.Left="21" Canvas.Top="74" Height="34" Width="223"
                    Background="Gray" Foreground="White" FontWeight="Bold" Click="StartSimulator" ></Button>
        </Canvas>
    </Grid>
</Window>
